{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["esnext", "dom", "es5", "es6"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "metro.config.js"],
  "include": ["index.js", "app", "test", "storybook", "declarations.d.ts"]
}
